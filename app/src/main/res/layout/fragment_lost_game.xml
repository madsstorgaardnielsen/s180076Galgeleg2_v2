<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LostGameFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playgame.fragments.LostGameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loserImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/loserMsgTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/loserStatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/gotoMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/g_til_menu" />

    </LinearLayout>

</FrameLayout>